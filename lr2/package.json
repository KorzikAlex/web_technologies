{
    "name": "lr2",
    "version": "1.0.0",
    "description": "REST приложение для управления библиотекой книг",
    "main": "dist/server.js",
    "keywords": [],
    "type": "module",
    "author": "",
    "license": "ISC",
    "scripts": {
        "build:server": "tsc -p tsconfig.server.json",
        "build:client": "tsc -p tsconfig.client.json",
        "build:sass": "sass src/scss:public/css",
        "build": "npm run build:sass && npm run build:server && npm run build:client",
        "watch:client": "tsc -p tsconfig.client.json -w",
        "watch:server": "tsc -p tsconfig.server.json -w",
        "watch:sass": "sass --watch src/scss:public/css",
        "dev": "concurrently \"npm:watch:server\" \"npm:watch:client\" \"npm:watch:sass\" \"nodemon --watch dist --exec node dist/server.js\"",
        "start": "node dist/server.js"
    },
    "devDependencies": {
        "@types/connect-flash": "^0.0.40",
        "@types/connect-sqlite3": "^0.9.5",
        "@types/cookie-parser": "^1.4.9",
        "@types/debug": "^4.1.12",
        "@types/express": "^5.0.3",
        "@types/express-session": "^1.18.2",
        "@types/mkdirp": "^1.0.2",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.8.1",
        "@types/passport": "^1.0.17",
        "@types/passport-local": "^1.0.38",
        "@types/session-file-store": "^1.2.5",
        "concurrently": "^9.2.1",
        "nodemon": "^3.1.10",
        "sass": "^1.93.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.1.0",
        "@fortawesome/fontawesome-svg-core": "^7.1.0",
        "bcryptjs": "^3.0.2",
        "bootstrap": "^5.3.8",
        "connect-flash": "^0.1.1",
        "connect-sqlite3": "^0.9.16",
        "cookie-parser": "^1.4.7",
        "express": "^5.1.0",
        "express-session": "^1.18.2",
        "morgan": "^1.10.1",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "pug": "^3.0.3",
        "session-file-store": "^1.5.0"
    }
}
