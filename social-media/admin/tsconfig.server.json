{
    // Базовый конфигурационный файл
    "extends": "./tsconfig.json",
    "compilerOptions": {
        // Путь вывода скомпилированных файлов
        "outDir": "./dist/server",
        "rootDir": "./src/server",
        // Модульная система и целевая версия JavaScript
        "module": "NodeNext",
        "target": "ES2020",
        // Библиотеки, используемые в проекте
        "lib": [
            "ESNext"
        ],
        // Типы, используемые в проекте
        "types": [
            "node"
        ],
        // Разрешение модулей и дополнительные опции
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true
    },
    // Файлы, включаемые в компиляцию
    "include": [
        "src/server/**/*"
    ],
}