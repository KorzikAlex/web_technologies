extends layout
include components/_sidebar
include components/_post_card

block head
    title Лента - Социальная сеть

block content
    .d-flex
        +sidebar({active: 'feed', user: user})

        .flex-grow-1.bg-light.min-vh-100
            .container.py-4(style="max-width: 800px;")
                // Форма создания поста
                .card.mb-4.shadow-sm
                    .card-body
                        h5.card-title.mb-3 Что у вас нового?
                        form#newPostForm
                            .mb-3
                                textarea.form-control#postContent(rows="3" placeholder="Поделитесь своими мыслями..." required)
                            .d-flex.justify-content-between.align-items-center
                                button.btn.btn-outline-secondary.btn-sm(type="button" id="addPhotoBtn")
                                    i.bi.bi-image.me-1
                                    | Добавить фото
                                button.btn.btn-primary(type="submit")
                                    i.bi.bi-send.me-1
                                    | Опубликовать

                // Лента постов
                #postsContainer
                    each post in posts || []
                        +post_card(post)
                    else
                        .text-center.text-muted.py-5
                            i.bi.bi-inbox.fs-1.d-block.mb-3
                            p Пока нет публикаций
                            p.small Создайте первый пост!
