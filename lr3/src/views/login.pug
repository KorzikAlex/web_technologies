extends layout

block head
    title Вход в систему

block content
    .container.mt-5
        .row.justify-content-center
            .col-md-6
                .card
                    .card-header
                        h3 Вход в систему
                    .card-body
                        form(method="POST" action="/login")
                            .mb-3
                                label.form-label(for="email") Email
                                input.form-control(type="email" id="email" name="email" required)
                            .mb-3
                                label.form-label(for="password") Пароль
                                input.form-control(type="password" id="password" name="password" required)
                            button.btn.btn-primary(type="submit") Войти
