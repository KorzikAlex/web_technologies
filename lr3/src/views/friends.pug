extends layout

block head
    - const activeTitle = 'Управление друзьями'
    - const activeLink = 'friends'
    -
        const navbarOptions = {
            actions: [
                { id: 'addFriendBtn', text: 'Добавить друга', modal: '#addFriendModal', icon: 'bi bi-person-plus' },
                { id: 'backToUsersBtn', text: 'К списку пользователей', icon: 'bi bi-arrow-left' }
            ]
        }
    title= pageTitle || 'Мои друзья'


block content
    .container-fluid.py-4
        h1.mb-4= pageTitle || 'Мои друзья'

        .mb-3
            input.form-control#searchFriend(type="text" placeholder="Поиск друзей...")

        .row.g-3#friendsGrid
            //- Содержимое будет рендериться на клиенте

    //- Модальное окно для добавления друзей
    #addFriendModal.modal.fade(tabindex="-1" aria-labelledby="addFriendModalLabel" aria-hidden="true")
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    h5.modal-title#addFriendModalLabel Добавить друга
                    button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
                .modal-body
                    input.form-control.mb-3#searchAllUsers(type="text" placeholder="Поиск пользователя для добавления...")
                    .list-group#allUsersList
                        //- Сюда будут загружаться пользователи
                .modal-footer
                    button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Закрыть

    //- Модальное окно подтверждения удаления друга
    #removeFriendModal.modal.fade(tabindex="-1" aria-labelledby="removeFriendModalLabel" aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-header
                    h5.modal-title#removeFriendModalLabel Подтверждение удаления
                    button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
                .modal-body
                    p Вы уверены, что хотите удалить этого друга из списка?
                    p.text-muted.small Это действие можно будет отменить, добавив пользователя снова.
                .modal-footer
                    button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Отмена
                    button.btn.btn-danger#confirmRemoveFriendBtn Удалить
