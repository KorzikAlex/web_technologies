{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/client/gulp",
        "rootDir": "./src/client",
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/client/**/*"
    ],
}