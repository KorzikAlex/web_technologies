{
    "compilerOptions": {
        // File Layout
        "outDir": "./dist",
        // Environment Settings
        "module": "esnext",
        "target": "es2020",
        "types": [],
        // Other Outputs
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        // Stricter Typechecking Options
        "noUncheckedIndexedAccess": true,
        // Recommended Options
        "strict": true,
        "jsx": "react-jsx",
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src/**/*",
        "webpack.config.ts",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
        }
    }
}