{
    "compilerOptions": {
        // Вывод компилированных файлов
        "outDir": "./dist",
        // Корневая директория исходных файлов
        "module": "esnext",
        "target": "es2020",
        // Библиотеки, используемые в проекте
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        // Строгие проверки типов
        "noUncheckedIndexedAccess": true,
        "strict": true,
        "jsx": "react-jsx",
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        // Разрешение модулей
        "moduleResolution": "node",
        // Разрешение модулей относительно базового URL
        "baseUrl": ".",
        // Пути для модулей
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        // Типы, используемые в проекте
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    // Файлы, включаемые в компиляцию
    "include": [
        "src/**/*",
        "webpack.config.ts",
        "gulpfile.ts",
        "gulpfile.server.ts",
    ],
    // Настройки для ts-node
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs",
        }
    }
}