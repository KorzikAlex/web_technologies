{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/server",
        "rootDir": "./src/server",
        "module": "NodeNext",
        "target": "ES2020",
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    }
}