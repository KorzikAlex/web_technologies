{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/client/webpack",
        "rootDir": "./src/client",
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "verbatimModuleSyntax": true,
    },
    "include": [
        "src/client/**/*"
    ]
}
